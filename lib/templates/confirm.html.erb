<table width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td class="content-block">
      <h1>Your Jekyll-Store.com Order Confirmation</h1>
    </td>
  </tr>
  <tr>
    <td class="content-block">
      <h3>Thank you for shopping with Jekyll-Store.</h3>
      <p>Order confirmation number:<h2><%= number %></h2></p>
    </td>
  </tr>
  <tr>
    <td class="content-block">
      <table class="invoice">
        <tr>
          <td>
            <%= customer['name'] %><br>
            <%= Time.now.strftime('%a %d %b %Y') %>
          </td>
        </tr>
        <tr>
          <td>
            <table class="invoice-items" cellpadding="0" cellspacing="0">
            <% basket.each do |name, hash| %>
              <tr>
                <td><%= hash[:product].name %></td>
                <td class="alignright">x<%= hash[:quantity] %></td>
              </tr>
            <% end %>
              <tr class="total">
                <td class="alignright" width="80%">Total</td>
                <td class="alignright">Â£<%= total.to_f %></td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="content-block delivery">
      <p>We will be delivering to:</p>
      <address>
        <%= address['address1'] %>,<br /><% unless address['address2'] == '' %>
        <%= address['address2'] %>,<br /><% end %>
        <%= address['city'] %>,<br />
        <%= address['county'] %>,<br />
        <%= address['country'].name %>,<br />
        <%= address['postcode'] %>
      </address>
      <p>Your order will be arriving in: <%= delivery.eta %></p>
    </td>
  </tr>
</table>